@page
@model TeaShop.Pages.Checkout.CheckoutModel

@{
ViewData["Title"] = "Your Order";
}
<h1>Your Order</h1>
@{
    var imagePath = "~/images/Teas/" + (@Model.ImageTitle + ".jpg");
}
<div class="align-baseline-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true"/>
        <p>Your order for the @Model.TeaName tea is ready!</p>
        <p>Total price for your Order is @Model.TeaPrice SEK</p>
        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>